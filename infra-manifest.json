            "striim": {
                "count": 1,
                "type": "t2.medium",
                "data-volume-size": 16,
                "log-volume-size": 8
            },
            "apache-http": {
                "count": 1,
                "type": "t2.micro",
                "data-volume-size": 0,
                "log-volume-size": 8                
            },
            "weblogic": {
                "count": 1,
                "type": "t2.large",
                "data-volume-size": 32,
                "log-volume-size": 8                
