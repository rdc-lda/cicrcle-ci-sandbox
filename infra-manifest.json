            "elasticsearch-http": {
                "count": 1,
                "type": "t2.medium",
                "data-volume-size": 0,
                "log-volume-size": 8
            },
            "elasticsearch-data": {
                "count": 1,
                "type": "t2.medium",
                "data-volume-size": 50,
                "log-volume-size": 8
            },
            "elasticsearch-master": {
                "count": 1,
                "type": "t2.medium",
                "data-volume-size": 0,
                "log-volume-size": 8
            },
            "redis": {
                "count": 1,
                "type": "t2.micro",
                "data-volume-size": 16,
