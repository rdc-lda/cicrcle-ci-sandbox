        "region": "eu-west-3",
        "instances": {
            "openshift-master": {
                "count": 1,
                "type": "t2.medium",
                "data-volume-size": 0,
                "log-volume-size": 8
            },
            "openshift-infra": {
                "count": 1,
                "type": "t2.medium",
                "data-volume-size": 50,
                "log-volume-size": 8
            },
            "openshift-worker": {
                "count": 5,
                "type": "t2.medium",
                "data-volume-size": 0,
                "log-volume-size": 8
